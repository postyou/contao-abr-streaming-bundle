{
    "name": "postyou/contao-abr-streaming-bundle",
    "description": "Adaptive Bitrate Streaming using Video.js",
    "keywords": [
        "contao",
        "streaming",
        "dash",
        "hls"
    ],
    "type": "contao-bundle",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Postyou Werbeagentur",
            "homepage": "https://postyou.de"
        }
    ],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^4.13",
        "videojs/video.js": "^8.6",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/http-kernel": "^5.4"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Postyou\\ContaoABRStreamingBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Postyou\\ContaoABRStreamingBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
